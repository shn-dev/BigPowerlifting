<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <LinearLayout
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/attemptselectstartlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fitness_center_black_24dp"/>

        <TextView
            android:id="@+id/maxeffortstarttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/attemptselectstartlogo"
            android:fontFamily="@font/roboto_light"
            android:text="@string/maxeffortresultstitle"
            android:textColor="@color/cardTitle"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxeffortstarttitle"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/attemptselectstartlogo"
            android:fontFamily="@font/roboto_light"
            android:text="@string/maxeffortresultssubtitle"
            android:textColor="@color/cardContent"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/divider"
        />
<android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="com.bigpowerlifting.bigsoftware.bigpowerlifting.maxeffort.MaxEffortResultFragment2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_maxeffortresult"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

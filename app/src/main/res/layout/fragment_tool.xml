<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:id="@+id/tool_ImageView"
            android:scaleType="fitCenter"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tool_ImageView"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/cardTitle"
                    android:textColor="@color/cardTitle"
                    android:fontFamily="@font/roboto_light"/>
                <TextView
                    android:layout_below="@id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardSubtitle"
                    android:textColor="@color/cardSecondaryTitle"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardArrow"/>
            </RelativeLayout>
            <!-- title -->

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cardHiddenLayout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardContent"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/cardContent"
                android:fontFamily="@font/roboto_light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:paddingTop="24dp"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:text="@string/cardAction1"
                android:id="@+id/cardOpenTool"
                android:textColor="@color/cardAction"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>


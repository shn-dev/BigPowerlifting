    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_looks_one_black_24dp"
            android:id="@+id/attempt1IV"/>

        <!-- Title -->
        <TextView
            android:paddingTop="16dp"
            android:id="@+id/firstattempttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/attempt1IV"
            android:fontFamily="@font/roboto_light"
            android:text="@string/attempt1"
            android:textColor="@color/cardTitle"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <TextView
            android:id="@+id/attempt1Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_light"
            android:text="640lbs / 290kg"
            android:textAlignment="center"
            android:textColor="@color/cardContent"
            android:textSize="35sp" />
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_below="@id/attempt1Weight"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="low"/>
            <SeekBar
                android:progress="50"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="high"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_looks_two_black_24dp"
            android:id="@+id/attempt2IV"/>

        <!-- Title -->
        <TextView
            android:paddingTop="16dp"
            android:id="@+id/secondattempttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/attempt2IV"
            android:fontFamily="@font/roboto_light"
            android:text="@string/attempt2"
            android:textColor="@color/cardTitle"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/attempt2Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="680lbs / 305kg"
            android:textColor="@color/cardContent"
            android:textSize="35sp" />
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_below="@id/attempt2Weight"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="low"/>
            <SeekBar
                android:progress="50"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="high"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_looks_3_black_24dp"
            android:id="@+id/attempt3IV"/>

        <!-- Title -->
        <TextView
            android:paddingTop="16dp"
            android:id="@+id/thirdattempttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/attempt3IV"
            android:fontFamily="@font/roboto_light"
            android:text="@string/attempt3"
            android:textColor="@color/cardTitle"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="16dp">
        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/attempt3Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="720lbs / 325.5kg"
            android:textColor="@color/cardContent"
            android:textSize="35sp" />
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_below="@id/attempt3Weight"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="low"/>
            <SeekBar
                android:progress="50"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="high"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
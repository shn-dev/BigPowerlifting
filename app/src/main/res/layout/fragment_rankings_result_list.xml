<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Title -->
        <TextView
            android:id="@+id/rankingsTitle"
            android:text="@string/RankingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/cardTitle"/>
        <!-- Subtitle-->
        <LinearLayout
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:layout_below="@id/rankingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RankingsDivison"
                android:textColor="@color/cardSecondaryTitle"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/RankingsWeightClass"
                android:textColor="@color/cardSecondaryTitle"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/RankingsState"
                android:textColor="@color/cardSecondaryTitle"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/list"
    tools:context="com.bigpowerlifting.bigsoftware.bigpowerlifting.Rankings.RankingsResultFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    app:layoutManager="LinearLayoutManager"
    tools:listitem="@layout/fragment_rankings_result" />
    </LinearLayout>